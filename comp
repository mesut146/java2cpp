mkdir out
base=/storage/emulated/0/AppProjects/java2cpp
antlr=${base}/lib/antlr-runtime-4.7.2.jar
src=${base}/src
out=${base}/out

comp(){
javac \
-cp ${antlr}:${out} \
-d ${out} \
${src}/com/mesut/j2cpp/Main.java
}

run(){
  java -cp ${antlr}:${out} com.mesut.j2cpp.Main
}

ant(){
 ant build
 java -cp ${antlr}:${base}/build/classes com.mesut.j2cpp.Main
}

echo "running"
ant
